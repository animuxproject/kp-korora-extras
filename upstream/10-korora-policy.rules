// korora authorizations/policy for the wheel group.
//
// DO NOT EDIT THIS FILE, it will be overwritten on update.
//
// Allow users in the wheel group to do various tasks without being
// interrupted by a password dialog

polkit.addRule(function(action, subject) {
    if (action.id == "org.kde.kcontrol.kcmkdm.save" &&
        subject.isInGroup("wheel") && subject.active) {
        return polkit.Result.YES;
    }
});

polkit.addRule(function(action, subject) {
    if (action.id.indexOf("org.freedesktop.udisks2.filesystem-mount") == 0 &&
        subject.isInGroup("wheel") && subject.active) {
        return polkit.Result.YES;
    }
});

